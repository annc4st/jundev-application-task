// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Status {
  NEW
  IN_PROGRESS
  DONE
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  status      Status    @default(NEW)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
}
